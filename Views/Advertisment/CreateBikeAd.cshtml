@model AdvertismentPlatform.ViewModels.BikeAndCarViewModel
@{
    ViewBag.Title = "Bike Advertise";
}

<h2>Add Bike</h2>
<form enctype="multipart/form-data" method="post" asp-action="CreateBikeAd">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.Brand"></label>
        </div>
        <div class="col-4">
            <Input asp-for="bike.Brand" class="form-control" />
            <span asp-validation-for="bike.Brand" class="text-danger"></span>
        </div>
        <div class="col-auto">
            <label asp-for="bike.Picture"></label>
        </div>
        <div class="col-3">
            <div class="custom-file">
                <input asp-for="bike.Picture" class="form-control custom-file-input">
                <label class="custom-file-label">Choose Picture....</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.ProductAge"></label>
        </div>

        <div class="col-4">
            <Input asp-for="bike.ProductAge" type="date" class="form-control" />
            <span asp-validation-for="bike.ProductAge" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.Mileage"></label>
        </div>

        <div class="col-4">
            <Input asp-for="bike.Mileage" type="text" class="form-control" />
            <span asp-validation-for="bike.Mileage" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.TopSpeed"></label>
        </div>

        <div class="col-4">
            <Input asp-for="bike.TopSpeed" type="text" class="form-control" />
            <span asp-validation-for="bike.TopSpeed" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.Price"></label>
        </div>

        <div class="col-4">
            <Input asp-for="bike.Price" class="form-control" />
            <span asp-validation-for="bike.Price" class="text-danger"></span>
        </div>
        @* <div class="col-1">
                <label asp-for="Currency"></label>
            </div>

            <div class="col-2">
                <select asp-for="Currency" asp-items="Model.Currencies" class="form-control"></select>
                <span asp-validation-for="Currency" class="text-danger"></span>
            </div> *@
    </div>


    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.Title"></label>
        </div>

        <div class="col-4">
            <Input asp-for="bike.Title" class="form-control" />
            <span asp-validation-for="bike.Title" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="bike.Description"></label>
        </div>

        <div class="col-4">
            <textarea asp-for="bike.Description" class="form-control"></textarea>
        </div>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Create" />
        <a asp-action="CreateAdvertise" class="btn btn-primary">Back</a>
    </div>
</form>

@section Scripts{

    <script src="~/js/SyncDropDownListName.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?render=_reCAPTCHA_site_key"></script>
    <script src="~/js/ReCaptcha.js"></script>
}